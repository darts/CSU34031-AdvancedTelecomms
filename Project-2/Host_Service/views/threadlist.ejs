<style type="text/css">
    #popupbox {
        margin: 0;
        margin-left: 40%;
        margin-right: 40%;
        margin-top: 50px;
        padding-top: 10px;
        width: 20%;
        height: 150px;
        position: absolute;
        background: #FBFBF0;
        border: solid #000000 2px;
        z-index: 9;
        font-family: arial;
        visibility: hidden;
    }
</style>
<div style="padding-right: 6px; padding-left: 25px;">
    <div id="userlogin"
        style="width: 100%; text-align: center; margin-bottom: 8px; padding: 3px; background-color: blue;"
        onclick="document.getElementById('popupbox').style.visibility = 'visible'">
        Login</div>
    <div class="">
        <input id="newthread-title" style="width: 100%; background-color: chartreuse; margin-bottom: 5px;"
            placeholder="New Thread Title" value="" required></input>
        <textarea placeholder="The first post" id="newthread-container"
            style="width: 100%; min-height: 100px; background-color: chartreuse;" required></textarea>
        <br>
        <button onclick="postthread()">Create Thread</button>
    </div>
</div>
<div id="popupbox">
    <center>Username:</center>
    <center><input id="unm" size="14" /></center>
    <center>Password:</center>
    <center><input id="pwd" type="password" size="14" /></center>
    <center><input type="submit" name="submit" value="Login" onclick="login()" /></center>
    <input type="checkbox" id="newUser"> Create New Account
    <br />
    <center><a onclick="document.getElementById('popupbox').style.visibility = 'hidden'">Close</a></center>
</div>


<div class="feed">
    <ul class="feedList">
        <% thread.forEach((e, i) => { %>
        <li style="background-color: thistle;" onclick="moveToThread('<%= i %>')">
            <p style="margin-top: 0px; margin-bottom: 0px;padding: 5px;">
                <div id="head-<%= i %>"><%= e.name %></div>
                <br>
                By: <%= e.content[0].username %>
            </p>
        </li>
        <% }); %>
    </ul>
</div>

<div style="padding-right: 6px; padding-left: 25px;">
    <div style="width:100%; text-align: center; background-color: darkkhaki; padding-top: 5px;"
        onclick="convertToCrypto()">
        Toggle Crypto
    </div>
</div>
